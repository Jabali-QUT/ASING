@model IEnumerable<ASING.Models.UniversityUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_ViewStart.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniversityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniversityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniversityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
